<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Yahtzee.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Yahtzee.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Yahtzee">

    <ShellContent
        Title="Main Page"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="main-page" />

    <ShellContent
        Title="Game Page"
        ContentTemplate="{DataTemplate pages:GamePage}"
        Route="game-page" />

    <ShellContent
        Title="Scores Page"
        ContentTemplate="{DataTemplate pages:ScoresPage}"
        Route="scores-page" />

</Shell>
